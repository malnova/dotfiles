! Recharger le fichier en cas de modifications avec la commande :
! xrdb -load .Xresources
!
! Les noms des polices de caractères à utiliser peuvent être
! affichés avec la commande : fc-list

! Font settings -----------------------------------

Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.dpi: 96
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

! xterm -------------------------------------------

XTerm*customization: -color
XTerm*utf8Title: true
XTerm*renderFont: true
XTerm*faceName: Monospace:size=11
XTerm*selectToClipboard: true

! urxvt -------------------------------------------

URxvt.font: xft:DejaVu Sans Mono:Regular:size=12
URxvt.boldFont: xft:DejaVu Sans Mono:bold:size=12
URxvt.italicFont: xft:DejaVu Sans Mono:italic:size=12
URxvt.boldItalicFont: xft:DejaVu Sans Mono:bold:italic:size=12
URxvt.letterSpace: -2
! Add fallback fonts as laid out in `man 1 urxvt` under "font:" in the RESOURCES section

! Window size and position
!URxvt*geometry: 60x22+50+100
! Window size, let the Window Manager position it
URxvt.geometry: 80x27

! Copier / coller
! Par défaut : "URxvt.selectToClipboard: true" permet le copier/coller
! avec les touches Ctrl-alt-c / Ctrl-alt-v
! Le raccourci pour copier est aussi défini dans tmux.conf !
! Disable Ctrl-Alt-c & Ctrl-Alt-v bindings
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:
! Bind Ctrl-Shift-c to copy and Ctrl-v to paste
URxvt.keysym.Control-Shift-c: eval:selection_to_clipboard
URxvt.keysym.Control-v: eval:paste_clipboard

URxvt.scrollstyle: plain
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.iconFile: /usr/share/icons/Faenza/apps/48/utilities-terminal.png

! Scrollback buffer lines - 65535 is max (64 is default)
! Dépend aussi du nombre de lignes fixé par tmux dans tmux.conf
URxvt.saveLines: 8192

! True transparency, opacity percentage set in square brackets before URxvt.background colour
!URxvt.depth: 32

! Cacher le curseur de la souris lors de la frappe ou au bout de 2 secondes
URxvt.pointerBlank: true

! Désactiver le "ISO 14755 mode" et le "Picture Insert Mode" de Ctrl+Shift
URxvt.iso14755: false
URxvt.iso14755_52: false

! Color scheme ------------------------------------
URxvt.dynamicColors: on
! www.xcolors.net
URxvt.intensityStyles: false
*background: #1D1F21
!URxvt.background: [80]#1D1F21
*foreground: #C5C8C6
URxvt.cursorColor: #D5D8D6
