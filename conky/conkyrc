--[[
Fichier de configuration par défaut :
/usr/share/doc/conky-<numéro_de_version>/conky.conf

Explication des commandes pour conky.config :
http://conky.sourceforge.net/config_settings.html

Explication des commandes pour conky.text :
http://conky.sourceforge.net/variables.html
]]

conky.config = {
-- Window Settings
-- If own_window is yes, you may specify type normal, desktop, dock, panel or override (default: normal).
-- Desktop windows are special windows that have no window decorations, are always visible on your desktop,
-- do not appear in your pager or taskbar, and are sticky across all workspaces.
-- Panel windows reserve space along a desktop edge, just like panels and taskbars,
-- preventing maximized windows from overlapping them.
-- The edge is chosen based on the alignment option.
-- Override windows are not under the control of the window manager. Hints are ignored.
-- This type of window can be useful for certain situations.
	own_window = true,
	own_window_type = 'desktop',
	own_window_transparent = false,
	own_window_hints = 'undecorated,below,skip_taskbar,skip_pager,sticky',
	own_window_colour = '#000000',
	own_window_class = 'Conky',
	own_window_title = 'Bunsen Labs Default Conky',

-- ARGB transparency
	own_window_argb_visual = true,
-- When ARGB visuals are enabled, this use this to modify the alpha value
-- Use: own_window_type normal
-- Use: own_window_transparent no
-- Valid range is 0-255, where 0 is 0% opacity, and 255 is 100% opacity.
	own_window_argb_value = 0,

	minimum_width = 260, minimum_height = 0,
	maximum_width = 260,

	gap_x = 15,
	gap_y = 50,

	alignment = 'top_right',

-- Font Settings
-- Use Xft (anti-aliased font and stuff)
	use_xft = true,
	font = 'Monospace:size=10',
--xftfont Liberation Sans:bold:size=9

-- Alpha of Xft font. Must be a value at or between 1 and 0
	xftalpha = 1,
-- Force UTF8? requires XFT
	override_utf8_locale = true,

	uppercase = false,

-- Colour Settings
	draw_shades = false,--yes
	default_shade_color = '#000000',

	draw_outline = false,-- amplifies text if yes
	default_outline_color = '#000000',

--default_color 656667 -- Waldorf original colour
--default_color 7a7a7a -- Flame & Bunsen Grey
--default_color 929292 -- Labs Grey
--default_color C0C0C0 -- Silver
--default_color B5B5B5
	default_color = 'grey90',
--color0 B0E0E6 -- PowerBlue
	color0 = 'grey70',
--color1 778899 -- LightSlateGray
	color1 = 'grey35',
--color2 D8BFD8 -- Thistle
	color2 = '#FFA07A',
--color3 9ACD32 -- YellowGreen
	color3 = '#DDAA00',
	color4 = '#FFA07A', -- LightSalmon
	color5 = '#FFDEAD', -- NavajoWhite
	color6 = '#00BFFF', -- DeepSkyBlue
	color7 = '#5F9EA0', -- CadetBlue
	color8 = '#BDB76B', -- DarkKhaki
	color9 = '#CD5C5C', -- IndianRed

-- Borders Section
	draw_borders = false,
-- Stippled borders?
	stippled_borders = 5,
-- border margins
	border_inner_margin = 5,
	border_outer_margin = 0,
-- border width
	border_width = 2,
-- graph borders
	draw_graph_borders = true,
--default_graph_size 15 40

-- Miscellaneous Section
-- Boolean value, if true, Conky will be forked to background when started.
	background = true,

-- Adds spaces around certain objects to stop them from moving other things
-- around, this only helps if you are using a mono font
-- Options: right, left or none
	use_spacer = 'none',

-- Default and Minimum size is 256 - needs more for single commands that
-- "call" a lot of text IE: bash scripts
	text_buffer_size = 6144,

-- Subtract (file system) buffers from used memory?
	no_buffers = true,

-- change GiB to G and MiB to M
	short_units = true,

-- Like it says, ot pads the decimals on % values
-- doesn't seem to work since v1.7.1
	pad_percents = 2,

-- Imlib2 image cache size, in bytes. Default 4MiB Increase this value if you use
-- $image lots. Set to 0 to disable the image cache.
	imlib_cache_size = 0,

-- Use the Xdbe extension? (eliminates flicker)
-- It is highly recommended to use own window with this one
-- so double buffer won't be so big.
	double_buffer = true,

--   Maximum size of user text buffer, i.e. layout below TEXT line in config file
--  (default is 16384 bytes)
-- max_user_text 16384

-- Desired output unit of all objects displaying a temperature. Parameters are
-- either "fahrenheit" or "celsius". The default unit is degree Celsius.
-- temperature_unit Fahrenheit

-- Width for $top name value (defaults to 15 characters)
	top_name_width = 14,

	update_interval = 1,
};

conky.text = [[
${color}Heure${alignr}${color0}${time %H:%M:%S}
${color}Heure UTC${alignr}${color0}${utime %H:%M}
${color}Uptime${alignr}${color0}${uptime_short}\
${if_empty ${exec upower -e | grep 'BAT'}}${else}
${color}Batterie${alignr}${color0}${battery_percent}% (${battery_time})${endif}

${color}root${goto 60}${if_match ${fs_used_perc /}<50}${color0}${else}${if_match ${fs_used_perc /}<75}${color2}${else}${color3}${endif}${endif}${fs_used /}/${fs_size /} (${fs_used_perc /}%)${goto 210}${color1}${fs_bar /}
${color}/home${goto 60}${if_match ${fs_used_perc /home}<50}${color0}${else}${if_match ${fs_used_perc /home}<75}${color2}${else}${color3}${endif}${endif}${fs_used /home}/${fs_size /home} (${fs_used_perc /home}%)${goto 210}${color1}${fs_bar /home}

${color}RAM${goto 60}${if_match $memperc<50}${color0}${else}${if_match $memperc<75}${color2}${else}${color3}${endif}${endif}$mem/$memmax ($memperc%)${goto 210}${color1}$membar
${color}Swap${goto 60}${if_match $swapperc<50}${color0}${else}${if_match $swapperc<75}${color2}${else}${color3}${endif}${endif}$swap/$swapmax ($swapperc%)${goto 210}${color1}${swapbar}

${color}CPU 0${goto 85}${if_match ${cpu cpu1}<50}${color0}${else}${if_match ${cpu cpu1}<75}${color2}${else}${color3}${endif}${endif}${cpu cpu1}%${alignr}${color0}${exec awk '/cpu MHz/{i++}i==2{printf "%.f",$4; exit}' /proc/cpuinfo} MHz
${color}CPU 1${goto 85}${if_match ${cpu cpu2}<50}${color0}${else}${if_match ${cpu cpu2}<75}${color2}${else}${color3}${endif}${endif}${cpu cpu2}%${alignr}${color0}${exec awk '/cpu MHz/{i++}i==2{printf "%.f",$4; exit}' /proc/cpuinfo} MHz
${color}Moyenne${goto 85}${if_match ${cpu cpu0}<50}${color0}${else}${if_match ${cpu cpu0}<75}${color2}${else}${color3}${endif}${endif}${cpu cpu0}%
${color1}${cpugraph cpu0 18 8434A4 A672CF}${voffset -6}

${if_existing /usr/bin/sensors}${if_existing .config/conky/conky_temp}${color}Périphérique${alignr}Temp.
${execpi 30 ~/.config/conky/conky_temp}${endif}${endif}\
${if_existing /usr/bin/sensors}${if_existing .config/conky/conky_fan}${execpi 30 ~/.config/conky/conky_fan}${endif}${endif}

${color}Processus          CPU%${alignr}MEM
 ${color3}${top name 1} ${top cpu 1}${alignr}${top mem_res 1}
 ${color}${top name 2} ${color0}${top cpu 2}${alignr}${top mem_res 2}
 ${color}${top name 3} ${color0}${top cpu 3}${alignr}${top mem_res 3}
 ${color}${top name 4} ${color0}${top cpu 4}${alignr}${top mem_res 4}
${alignr}${color}(Utilisation mémoire)
 ${color3}${top_mem name 1} ${top_mem cpu 1}${alignr}${top_mem mem_res 1}
 ${color}${top_mem name 2} ${color0}${top_mem cpu 2}${alignr}${top_mem mem_res 2}
 ${color}${top_mem name 3} ${color0}${top_mem cpu 3}${alignr} ${top_mem mem_res 3}
 ${color}${top_mem name 4} ${color0}${top_mem cpu 4}${alignr} ${top_mem mem_res 4}
]];
