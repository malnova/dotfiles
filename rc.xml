    <!-- Mes raccourcis clavier -->
    <!-- Menu -->
    <keybind key="Menu">
      <action name="ShowMenu">
        <menu>root-menu</menu>
      </action>
    </keybind>
    <keybind key="Super_L">
      <action name="ShowMenu">
        <menu>root-menu</menu>
      </action>
    </keybind>
    <!-- Clic droit -->
    <keybind key="C-A-Menu">
      <action name="Execute">
        <command>&default_path;xdotool click 3</command>
      </action>
    </keybind>
    <keybind key="C-A-Super_L">
      <action name="Execute">
        <command>&default_path;xdotool click 3</command>
      </action>
    </keybind>
    <!-- Gestion des fenêtres -->
    <keybind key="A-F4">
      <action name="Close"/>
    </keybind>
    <keybind key="A-space">
      <action name="ShowMenu">
        <menu>client-menu</menu>
      </action>
    </keybind>
    <!-- Changer de fenêtre active -->
    <keybind key="A-Escape">
      <action name="Lower"/>
      <action name="FocusToBottom"/>
      <action name="Unfocus"/>
    </keybind>
    <keybind key="A-Tab">
      <action name="NextWindow">
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <!-- Diminuer la luminosité -->
    <keybind key="XF86MonBrightnessDown">
      <action name="Execute">
        <command>&scripts_path;backlight -dec 3</command>
      </action>
    </keybind>
    <!-- Augmenter la luminosité -->
    <keybind key="XF86MonBrightnessUp">
      <action name="Execute">
        <command>&scripts_path;backlight -inc 3</command>
      </action>
    </keybind>
    <!-- Touche mute -->
    <keybind key="XF86AudioMute">
      <action name="Execute">
        <command>&default_path;amixer -q set Master toggle</command>
      </action>
    </keybind>
    <!-- Diminuer le volume -->
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute">
        <command>&default_path;amixer -q set Master 5%- unmute</command>
      </action>
    </keybind>
    <!-- Augmenter le volume -->
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute">
        <command>&default_path;amixer -q set Master 5%+ unmute</command>
      </action>
    </keybind>
    <!-- Capture d'écran -->
    <keybind key="Print">
      <action name="Execute">
        <command>&default_path;scrot '%Y-%m-%d--%s_$wx$h_scrot.png' -e '&default_path;mv $f &image_folder;; &scripts_path;sxiv &image_folder;$f'</command>
      </action>
    </keybind>
    <!-- Capture d'écran avec possibilité de sélectionner la zone à capturer -->
    <keybind key="C-A-Print">
      <action name="Execute">
        <command>&default_path;scrot -s '%Y-%m-%d--%s_$wx$h_scrot.png' -e '&default_path;mv $f &image_folder;; &scripts_path;sxiv &image_folder;$f'</command>
      </action>
    </keybind>
    <!-- Ctrl-Alt-Suppr -->
    <keybind key="C-A-Delete">
      <action name="Execute">
          <command>&default_path;urxvt -e &default_path;bash -l -c "sleep .05; &default_path;transset-df -a 0.85 > /dev/null 2>&amp;1; &default_path;htop"</command>
      </action>
    </keybind>
    <!-- Déplacer la fenêtre -->
    <keybind key="C-A-Up">
      <action name="MoveToEdge">
        <direction>north</direction>
      </action>
    </keybind>
    <keybind key="C-A-Down">
      <action name="MoveToEdge">
        <direction>south</direction>
      </action>
    </keybind>
    <keybind key="C-A-Right">
      <action name="MoveToEdge">
        <direction>east</direction>
      </action>
    </keybind>
    <keybind key="C-A-Left">
      <action name="MoveToEdge">
        <direction>west</direction>
      </action>
    </keybind>
    <!-- Redimensionner la fenêtre -->
    <keybind key="S-A-plus">
      <action name="If">
        <query target="focus">
          <maximizedhorizontal>yes</maximizedhorizontal>
        </query>
        <then>
          <action name="Unmaximize">
            <direction>horizontal</direction>
          </action>
          <action name="MoveResizeTo">
            <width>100%</width>
            <x>0</x>
          </action>
        </then>
      </action>
      <action name="If">
        <query target="focus">
          <maximizedvertical>yes</maximizedvertical>
        </query>
        <then>
          <action name="Unmaximize">
            <direction>vertical</direction>
          </action>
          <action name="MoveResizeTo">
            <height>100%</height>
            <y>0</y>
          </action>
        </then>
      </action>
      <action name="If">
        <query target="focus">
          <name type="exact">urxvt</name>
        </query>
        <then>
          <action name="ResizeRelative">
            <right>32</right>
            <bottom>19</bottom>
          </action>
        </then>
        <else>
          <action name="ResizeRelative">
            <right>6</right>
            <bottom>3</bottom>
          </action>
        </else>
      </action>
    </keybind>
    <keybind key="S-A-minus">
      <action name="If">
        <query target="focus">
          <maximizedhorizontal>yes</maximizedhorizontal>
        </query>
        <then>
          <action name="Unmaximize">
            <direction>horizontal</direction>
          </action>
          <action name="MoveResizeTo">
            <width>100%</width>
            <x>0</x>
          </action>
        </then>
      </action>
      <action name="If">
        <query target="focus">
          <maximizedvertical>yes</maximizedvertical>
        </query>
        <then>
          <action name="Unmaximize">
            <direction>vertical</direction>
          </action>
          <action name="MoveResizeTo">
            <height>100%</height>
            <y>0</y>
          </action>
        </then>
      </action>
      <action name="If">
        <query target="focus">
          <name type="exact">urxvt</name>
        </query>
        <then>
          <action name="ResizeRelative">
            <right>-32</right>
            <bottom>-19</bottom>
          </action>
        </then>
        <else>
          <action name="ResizeRelative">
            <right>-6</right>
            <bottom>-3</bottom>
          </action>
        </else>
      </action>
    </keybind>
    <keybind key="S-A-Up">
      <action name="If">
        <query target="focus">
          <maximizedvertical>yes</maximizedvertical>
        </query>
        <then>
          <action name="Unmaximize">
            <direction>vertical</direction>
          </action>
          <action name="MoveResizeTo">
            <height>75%</height>
            <y>0</y>
          </action>
        </then>
        <else>
          <action name="GrowToEdge">
            <direction>north</direction>
          </action>
        </else>
      </action>
    </keybind>
    <keybind key="S-A-Down">
      <action name="If">
        <query target="focus">
          <maximizedvertical>yes</maximizedvertical>
        </query>
        <then>
          <action name="Unmaximize">
            <direction>vertical</direction>
          </action>
          <action name="MoveResizeTo">
            <height>75%</height>
            <y>-0</y>
          </action>
        </then>
        <else>
          <action name="GrowToEdge">
            <direction>south</direction>
          </action>
        </else>
      </action>
    </keybind>
    <keybind key="S-A-Right">
      <action name="If">
        <query target="focus">
          <maximizedhorizontal>yes</maximizedhorizontal>
        </query>
        <then>
          <action name="Unmaximize">
            <direction>horizontal</direction>
          </action>
          <action name="MoveResizeTo">
            <width>75%</width>
            <x>-0</x>
          </action>
        </then>
        <else>
          <action name="GrowToEdge">
            <direction>east</direction>
          </action>
        </else>
      </action>
    </keybind>
    <keybind key="S-A-Left">
      <action name="If">
        <query target="focus">
          <maximizedhorizontal>yes</maximizedhorizontal>
        </query>
        <then>
          <action name="Unmaximize">
            <direction>horizontal</direction>
          </action>
          <action name="MoveResizeTo">
