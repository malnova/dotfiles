            <x>0</x>
          </action>
        </then>
        <else>
          <action name="GrowToEdge">
            <direction>west</direction>
          </action>
        </else>
      </action>
    </keybind>
    <!-- Changer la langue du clavier (layout) -->
    <keybind key="Shift-Shift_R">
