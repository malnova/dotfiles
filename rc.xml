    <!-- Fermer/tuer une application -->
    <keybind key="C-A-f">
      <action name="Execute">
        <command>&default_path;xkill</command>
      </action>
    </keybind>
    <!-- Icônifier (minimiser) la fenêtre -->
    <keybind key="S-A-i">
      <action name="Iconify"/>
    </keybind>
    <!-- Maximiser / réduire la fenêtre -->
    <keybind key="S-A-m">
      <action name="ToggleMaximize"/>
    </keybind>
    <!-- Taille normale de la fenêtre active -->
    <keybind key="S-A-n">
      <action name="If">
        <query target="focus">
          <name type="exact">urxvt</name>
        </query>
        <then>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <!-- dimensions de la fenêtre normale obtenues par la commande
                 "xdotool getactivewindow getwindowgeometry" -->
            <width>724</width>
            <height>517</height>
            <x>center</x>
            <y>center</y>
          </action>
        </then>
        <else>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <width>75%</width>
            <height>75%</height>
            <x>center</x>
            <y>center</y>
          </action>
        </else>
      </action>
    </keybind>
    <!-- Transparence/opacité des fenêtres (keychain) -->
    <keybind key="C-A-o" chroot="true">
      <!-- Activer / désactiver la transparence -->
      <keybind key="o">
        <action name="Execute">
          <command>&default_path;transset-df -a -t .85</command>
        </action>
      </keybind>
      <!-- Augmenter la transparence -->
      <keybind key="plus">
        <action name="Execute">
          <command>&default_path;transset-df -a --inc .05</command>
        </action>
      </keybind>
      <!-- Diminuer la transparence -->
      <keybind key="minus">
        <action name="Execute">
          <command>&default_path;transset-df -a --dec .05</command>
        </action>
      </keybind>
      <!-- Quitter la keychain -->
      <keybind key="Escape">
        <action name="BreakChroot"/>
      </keybind>
    </keybind>
    <!-- Activer / désactiver le plein écran complet (sans barre de titre, sans panel) -->
    <keybind key="S-A-p">
      <action name="ToggleFullscreen"/>
    </keybind>
    <!-- Réduire la taille de la fenêtre active à un quart de l'écran -->
    <keybind key="S-A-q">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <height>50%</height>
        <width>50%</width>
      </action>
    </keybind>
    <!-- Configuration auto. des écrans avec xrandr -->
    <keybind key="C-A-r">
      <action name="Execute">
        <command>&default_path;xrandr --auto</command>
      </action>
    </keybind>
    <!-- Activer / désactiver la veille de l'écran (screen) -->
    <keybind key="C-A-s">
      <action name="Execute">
        <command>&scripts_path;toggle-dpms</command>
      </action>
    </keybind>
    <!-- Notification du statut de dpms -->
    <keybind key="C-A-S-s">
      <action name="Execute">
        <command>&scripts_path;toggle-dpms status</command>
      </action>
    </keybind>
    <!-- Tiling vertical / horizontal automatique sur les deux dernières fenêtres actives -->
    <keybind key="S-A-t">
      <action name="If">
        <query target="focus">
          <maximizedhorizontal>yes</maximizedhorizontal>
        </query>
        <then>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <width>50%</width>
          </action>
          <action name="Maximize">
            <direction>vertical</direction>
          </action>
          <action name="MoveResizeTo">
            <x>0</x>
            <y>0</y>
          </action>
          <action name="NextWindow">
            <interactive>no</interactive>
            <dialog>none</dialog>
            <finalactions>
              <action name="Unmaximize"/>
              <action name="MoveResizeTo">
                <width>50%</width>
              </action>
              <action name="Maximize">
                <direction>vertical</direction>
              </action>
              <action name="MoveResizeTo">
                <x>-0</x>
                <y>0</y>
              </action>
            </finalactions>
          </action>
        </then>
        <else>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <height>50%</height>
          </action>
          <action name="Maximize">
            <direction>horizontal</direction>
          </action>
          <action name="MoveResizeTo">
            <x>0</x>
            <y>0</y>
          </action>
          <action name="NextWindow">
            <interactive>no</interactive>
            <dialog>none</dialog>
            <finalactions>
              <action name="Unmaximize"/>
              <action name="MoveResizeTo">
                <height>50%</height>
              </action>
              <action name="Maximize">
                <direction>horizontal</direction>
              </action>
              <action name="MoveResizeTo">
                <x>0</x>
                <y>-0</y>
              </action>
            </finalactions>
          </action>
        </else>
      </action>
    </keybind>
    <!-- Untile / fenêtres de taille normale -->
    <keybind key="S-A-u">
      <action name="If">
        <query target="focus">
          <name type="exact">urxvt</name>
        </query>
        <then>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <!-- dimensions de la fenêtre normale obtenues par la commande
                 "xdotool getactivewindow getwindowgeometry" -->
            <width>724</width>
            <height>517</height>
            <x>center</x>
            <y>center</y>
          </action>
        </then>
        <else>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <width>75%</width>
            <height>75%</height>
            <x>center</x>
            <y>center</y>
          </action>
        </else>
      </action>
      <action name="NextWindow">
        <interactive>no</interactive>
        <dialog>none</dialog>
        <finalactions>
          <action name="If">
            <query target="default">
              <name type="exact">urxvt</name>
            </query>
            <then>
              <action name="Unmaximize"/>
              <action name="MoveResizeTo">
                <!-- dimensions de la fenêtre normale obtenues par la commande
                    "xdotool getactivewindow getwindowgeometry" -->
                <width>724</width>
                <height>517</height>
                <x>center</x>
                <y>center</y>
              </action>
            </then>
            <else>
              <action name="Unmaximize"/>
              <action name="MoveResizeTo">
                <width>75%</width>
                <height>75%</height>
                <x>center</x>
                <y>center</y>
              </action>
            </else>
          </action>
        </finalactions>
      </action>
    </keybind>
    <!-- Activer / désactiver le WiFi -->
    <keybind key="C-A-w">
      <action name="Execute">
        <command>&scripts_path;toggle-wifi</command>
      </action>
    </keybind>
    <!-- Notification du statut du WiFi -->
    <keybind key="C-A-S-w">
      <action name="Execute">
        <command>&scripts_path;toggle-wifi status</command>
      </action>
    </keybind>
    <!-- Activer / désactiver la mise en veille -->
    <keybind key="C-A-x">
      <action name="Execute">
        <command>&scripts_path;power_management toggle</command>
      </action>
    </keybind>
    <!-- Notification du statut de la mise en veille -->
    <keybind key="C-A-S-x">
      <action name="Execute">
        <command>&scripts_path;power_management status</command>
      </action>
    </keybind>
    <!-- Zoomer une partie de l'écran -->
    <keybind key="C-A-z">
      <action name="Execute">
        <command>&default_path;xmag</command>
      </action>
    </keybind>
  </keyboard>
