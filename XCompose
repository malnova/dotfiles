include "/usr/share/X11/locale/en_US.UTF-8/Compose"

# La touche Compose (<Multi_key>) est définie dans le fichier
# /etc/X11/xorg.conf.d/00-keyboard.conf

# !!! L'affichage des combinaisons personnalisées dépend aussi de la police
# de caractères utilisée ! Celle-ci est définie dans le fichier
# ~/.Xresources !

# Symboles personnalisés
<Multi_key> <i> <n> <t> : "∫"
<Multi_key> <asciitilde> <asciitilde> : "≈"
<Multi_key> <asciitilde> <minus> : "≃"
<Multi_key> <minus> <asciitilde> : "≃"
<Multi_key> <asciitilde> <equal> : "≅"
<Multi_key> <equal> <asciitilde> : "≅"
<Multi_key> <a> <p> <p> : "∈"
<Multi_key> <n> <a> <p> <p> : "∉"
<Multi_key> <c> <o> <n> <t> : "∋"
<Multi_key> <n> <c> <o> <n> <t> : "∌"
<Multi_key> <p> <t> : "∀"
<Multi_key> <i> <e> : "∃"

# Flèches
# Le "V" est majuscule pour ne pas interférer avec certaines combinaisons
# par défaut (par ex. <bar> <v> ou <v> <bar> pour le caractère √)
<Multi_key> <equal> <less> : "⇐"
<Multi_key> <less> <equal> <greater> : "⇔"
<Multi_key> <less> <minus> <greater> : "↔"
<Multi_key> <bar> <asciicircum> : "↑"
<Multi_key> <asciicircum> <bar> : "↑"
<Multi_key> <bar> <dead_circumflex> : "↑"
<Multi_key> <dead_circumflex> <bar> : "↑"
<Multi_key> <bar> <V> : "↓"
<Multi_key> <V> <bar> : "↓"
<Multi_key> <backslash> <asciicircum> : "↖"
<Multi_key> <asciicircum> <backslash> : "↖"
<Multi_key> <backslash> <dead_circumflex> : "↖"
<Multi_key> <dead_circumflex> <backslash> : "↖"
<Multi_key> <slash> <asciicircum> : "↗"
<Multi_key> <asciicircum> <slash> : "↗"
<Multi_key> <slash> <dead_circumflex> : "↗"
<Multi_key> <dead_circumflex> <slash> : "↗"
<Multi_key> <slash> <V> : "↙"
<Multi_key> <V> <slash> : "↙"
<Multi_key> <backslash> <V> : "↘"
<Multi_key> <V> <backslash> : "↘"
<Multi_key> <minus> <less> : "←" # <less> <minus> ne fonctionne pas dans le fichier contenant les combinaisons par défaut !

